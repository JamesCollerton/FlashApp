<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.flashapp.jamescollerton.flashapp.fragments.PowerFragment">

    <!-- Power Label -->
    <TextView
        android:id="@+id/powerLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ISOFragment"
        android:text="@string/label_power"
        style="@style/style_input_label" />

    <!-- Power Input -->
    <Spinner
        android:id="@+id/power"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/powerLabel"
        android:layout_marginBottom="@dimen/input_field_vertical_spacing"
        android:entries="@array/arrays_power"/>

</RelativeLayout>
